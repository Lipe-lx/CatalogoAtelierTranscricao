<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.FormularioProdutoActivity">

        <EditText
            android:id="@+id/activitu_formulario_produto_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Nome"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activitu_formulario_produto_colecao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Coleção"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="@+id/activitu_formulario_produto_nome"
            app:layout_constraintStart_toStartOf="@+id/activitu_formulario_produto_nome"
            app:layout_constraintTop_toBottomOf="@+id/activitu_formulario_produto_nome" />

        <EditText
            android:id="@+id/activitu_formulario_produto_dimensao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Dimensao"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="@+id/activitu_formulario_produto_colecao"
            app:layout_constraintStart_toStartOf="@+id/activitu_formulario_produto_colecao"
            app:layout_constraintTop_toBottomOf="@+id/activitu_formulario_produto_colecao" />

        <EditText
            android:id="@+id/activitu_formulario_produto_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Valor"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@+id/activitu_formulario_produto_dimensao"
            app:layout_constraintStart_toStartOf="@+id/activitu_formulario_produto_dimensao"
            app:layout_constraintTop_toBottomOf="@+id/activitu_formulario_produto_dimensao" />

        <Button
            android:id="@+id/activity_formulario_produto_botao_salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activitu_formulario_produto_valor"
            app:layout_constraintVertical_bias="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>